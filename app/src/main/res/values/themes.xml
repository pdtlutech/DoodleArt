<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MagicDoodle" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme_Day.MagicDoodle" parent="Base.Theme.MagicDoodle">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/defaultBackground</item>
    </style>

    <style name="Theme_Night.MagicDoodle" parent="Base.Theme.MagicDoodle">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/defaultBackground</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="CustomTextStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CustomTextStyleMedium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyleSemiBold">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyle20spSemiBold" parent="CustomTextStyleSemiBold">
        <item name="android:textSize">@dimen/size_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyle24spSemiBold">
        <item name="android:textSize">@dimen/size_24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyleBold">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyle24spBold" parent="CustomTextStyleBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_24sp</item>
    </style>
    <style name="CustomTextStyle24sp" parent="CustomTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_24sp</item>
    </style>

    <style name="CustomTextStyleMedium16sp" parent="CustomTextStyleMedium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="CustomTextStyle16sp" parent="CustomTextStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>


    <style name="CustomTextStyle16spBold" parent="CustomTextStyleBold">
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTextStyle20spBold" parent="CustomTextStyleBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_20sp</item>
    </style>

    <style name="CustomTextStyle20spMedium" parent="CustomTextStyleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_20sp</item>
    </style>


    <style name="ShapeAppearanceOverlay_CustomShape20dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_20dp</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay_CustomShape6dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_6dp</item>
        <item name="background">@color/transparent</item>
    </style>


</resources>