<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/songAvatar"
        android:src="@drawable/sample_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_CustomShape20dp"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/selectedItem"
        android:visibility="gone"
        android:background="@drawable/background_corner_20"
        android:backgroundTint="@color/black_0_6"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:layout_marginHorizontal="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/selectIcon"
            android:layout_width="@dimen/width_48dp"
            android:layout_height="@dimen/height_48dp"
            android:src="@drawable/icon_select_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>