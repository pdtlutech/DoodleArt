<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_corner_20"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/height_28dp">

    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/icon_choose_paper_size"
            android:layout_width="@dimen/width_32dp"
            android:layout_height="@dimen/height_32dp" />

        <TextView
            android:gravity="center"
            style="@style/CustomTextStyle20spMedium"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/padding_17dp"
            android:text="@string/choose_paper_size"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_32dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/allOptions"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/firstOption"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/customBlack"
            android:layout_width="@dimen/margin_70dp"
            android:layout_height="127dp">

            <TextView
                android:text="9:16"
                android:textColor="@color/white"
                style="@style/CustomTextStyleMedium16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondOption"
            android:background="@color/customBlack"
            android:layout_width="127dp"
            android:layout_weight="4"
            android:layout_marginHorizontal="@dimen/margin_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="127dp">

            <TextView
                android:text="1:1"
                android:textColor="@color/white"
                style="@style/CustomTextStyleMedium16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/thirdOption"
            android:layout_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/customBlack"
            android:layout_width="@dimen/width_72dp"
            android:layout_height="127dp">

            <TextView
                android:text="4:5"
                android:textColor="@color/white"
                style="@style/CustomTextStyleMedium16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_24dp"
        app:layout_constraintTop_toBottomOf="@+id/allOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_44dp">

        <TextView
            android:id="@+id/cancelBtn"
            android:text="@string/dialog_cancel"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            style="@style/CustomTextStyleMedium16sp"
            android:background="@drawable/background_corner_30"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/width_120dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/okBtn"
            android:text="@string/start_drawing"
            android:textColor="@color/black"
            style="@style/CustomTextStyleMedium16sp"
            android:background="@drawable/background_corner_30_horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/width_130dp"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>